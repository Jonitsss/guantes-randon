---
import Image from 'astro/components/Image.astro';
//importamos imagenes
import Slider1 from '../assets/slider1.jpg'
import Slider2 from '../assets/slider2.jpg'
import Slider3 from '../assets/slider3.jpg'
import Slider4 from '../assets/slider4.jpg'
import Slider5 from '../assets/slider5.jpg'
import Slider6 from '../assets/slider6.jpg'
import Slider7 from '../assets/slider7.jpg'
import Slider8 from '../assets/slider8.jpg'
---

<client:only>
    <script>
        import Swiper from 'swiper';
        import { Autoplay } from 'swiper/modules';
        import 'swiper/css';
        import 'swiper/css/autoplay';
    
        // Inicializa Swiper con autoplay
        const swiper = new Swiper('.swiper', {
          direction: 'horizontal', // Dirección del swiper (horizontal o vertical)
          loop: true, // Hacer loop del swiper
          autoplay: {
            delay: 2000, // Tiempo de espera entre diapositivas en milisegundos (2 segundos en este caso)
          },
          modules: [Autoplay], // Agrega el módulo de autoplay
          fadeEffect: {
            crossFade: true // Habilita el efecto de fade entre diapositivas
          }
        });
      </script>
</client:only>

<style>
  .swiper {
    height: 50vh;
    width: 100vw ;
    overflow: hidden;
  }

  .swiper-slide {
    display: flex;
    justify-content: center;
    align-items: center;
    overflow: hidden;
  }

  .swiper-slide img {
    width: 100%;
    height: 100%;
    animation: zoom 8s infinite; /* Animación de zoom durante 2 segundos */
    transform-origin: center; /* Define el origen de la transformación */
  }

  @keyframes zoom {
    0% {
      transform: scale(1); /* Sin zoom al inicio */
    }
    100% {
      transform: scale(1.1); /* Volver al tamaño original al final */
    }
  }
</style>

<div class="swiper">
  <div class="swiper-wrapper">
    <div class="swiper-slide"><Image src={Slider1} alt='Slider 1'/></div>
    <div class="swiper-slide"><Image src={Slider2} alt='Slider 2'/></div>
    <div class="swiper-slide"><Image src={Slider3} alt='Slider 3'/></div>
    <div class="swiper-slide"><Image src={Slider4} alt='Slider 4'/></div>
    <div class="swiper-slide"><Image src={Slider5} alt='Slider 5'/></div>
    <div class="swiper-slide"><Image src={Slider6} alt='Slider 6'/></div>
    <div class="swiper-slide"><Image src={Slider7} alt='Slider 7'/></div>
    <div class="swiper-slide"><Image src={Slider8} alt='Slider 8'/></div>
  </div>
</div>